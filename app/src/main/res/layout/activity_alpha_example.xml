<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">


    <LinearLayout
            android:id="@+id/alphaLevelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp">

        <TextView
                android:id="@+id/alphaLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/alphaLevelSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        <CheckBox
                android:id="@+id/fillTransparentCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fill_transparent" />

    </LinearLayout>

    <com.patryk1007.viewhighlighter.view.ViewHighlighter
            android:id="@+id/viewHighlighter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/alphaLevelView"/>

</RelativeLayout>